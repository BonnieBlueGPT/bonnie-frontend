{
  "name": "bonnie-ai-girlfriend-system",
  "version": "23.0.0",
  "description": "Ultimate AI Girlfriend System with Advanced Emotional Intelligence, Cross-Device Sync, and Smart Upselling",
  "type": "module",
  "main": "backend/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "echo 'No build step required for backend'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint backend/ --ext .js",
    "lint:fix": "eslint backend/ --ext .js --fix",
    "format": "prettier --write backend/**/*.js",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "monitor": "pm2 monitor",
    "deploy": "npm run lint && npm run test && echo 'Ready for deployment'",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "benchmark": "node scripts/benchmark.js",
    "security-audit": "npm audit && node scripts/security-check.js",
    "backup-db": "node scripts/backup-database.js",
    "restore-db": "node scripts/restore-database.js",
    "check-deploy": "node scripts/quick-deploy.js",
    "verify": "node scripts/quick-deploy.js"
  },
  "keywords": [
    "ai",
    "girlfriend",
    "chatbot",
    "emotional-intelligence",
    "cross-device",
    "upselling",
    "bonnie",
    "trainmygirl"
  ],
  "author": "TrainMyGirl Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "redis": "^4.6.11",
    "@sentry/node": "^7.85.0",
    "stripe": "^14.9.0",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.1",
    "pm2": "^5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/server.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 120
  },
  "nodemonConfig": {
    "watch": [
      "backend/"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/",
      "node_modules/",
      "tests/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trainmygirl/bonnie-ai-system.git"
  },
  "bugs": {
    "url": "https://github.com/trainmygirl/bonnie-ai-system/issues"
  },
  "homepage": "https://trainmygirl.com",
  "funding": {
    "type": "individual",
    "url": "https://trainmygirl.com/support"
  },
  "render": {
    "buildCommand": "npm install",
    "startCommand": "npm start",
    "healthCheckPath": "/health",
    "env": "node"
  }
}