{
  "name": "galatea-empire-pro",
  "version": "2.0.0",
  "type": "module",
  "description": "ðŸ”± Galatea Empire - Divine AI Chat Platform with Enterprise Architecture",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "deploy": "npm run build:prod && npm run deploy:surge",
    "deploy:surge": "surge dist/ galatea-empire.surge.sh",
    "docker:build": "docker build -t galatea-empire .",
    "docker:run": "docker run -p 3000:3000 galatea-empire",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.0",
    "zustand": "^5.0.2",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.263.1",
    "axios": "^1.7.7",
    "zod": "^3.23.8",
    "react-hook-form": "^7.53.2",
    "@hookform/resolvers": "^3.9.1",
    "react-query": "^3.39.3",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.59.16",
    "stripe": "^18.3.0",
    "@stripe/stripe-js": "^4.8.0",
    "@stripe/react-stripe-js": "^2.8.1",
    "react-hot-toast": "^2.4.1",
    "react-error-boundary": "^4.0.13",
    "immer": "^10.1.1",
    "date-fns": "^4.1.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "class-variance-authority": "^0.7.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.1",
    "react-intersection-observer": "^9.13.1",
    "react-virtual": "^2.10.4",
    "use-debounce": "^10.0.4",
    "react-helmet-async": "^2.0.5",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitejs/plugin-pwa": "^0.20.5",
    "typescript": "^5.6.3",
    "vite": "^7.0.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-bundle-analyzer": "^0.11.0",
    "vite-plugin-checker": "^0.8.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "eslint": "^9.14.0",
    "@eslint/js": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "playwright": "^1.48.2",
    "@playwright/test": "^1.48.2",
    "storybook": "^8.4.6",
    "@storybook/react": "^8.4.6",
    "@storybook/react-vite": "^8.4.6",
    "@storybook/addon-essentials": "^8.4.6",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-links": "^8.4.6",
    "msw": "^2.6.4",
    "msw-storybook-addon": "^2.0.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "semantic-release": "^24.2.0",
    "terser": "^5.36.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "msw": {
    "workerDirectory": "public"
  }
}
